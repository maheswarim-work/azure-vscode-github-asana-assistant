# Azure VSCode GitHub Asana Assistant Configuration

# Key Vault Configuration (Recommended for production)
USE_KEY_VAULT=true
AZURE_TENANT_ID=your_azure_tenant_id
AZURE_CLIENT_ID=your_azure_client_id
AZURE_CLIENT_SECRET=your_azure_client_secret
AZURE_KEY_VAULT_URL=https://your-keyvault.vault.azure.net/

# API Keys (Fallback for local development or when Key Vault is disabled)
# These will be used if Key Vault is not available or USE_KEY_VAULT=false
ASANA_ACCESS_TOKEN=your_asana_personal_access_token_here
GITHUB_TOKEN=your_github_personal_access_token_here
OPENAI_API_KEY=your_openai_api_key_here

# Database Configuration
DATABASE_URL=sqlite:///./assistant.db

# Redis Configuration (Optional - for caching)
REDIS_URL=redis://localhost:6379

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
DEBUG=false

# AI Configuration
OPENAI_MODEL=gpt-4
MAX_TOKENS=2000
TEMPERATURE=0.7

# Integration Settings
ASANA_WORKSPACE_GID=your_asana_workspace_gid
GITHUB_ORGANIZATION=your_github_organization_name
DEFAULT_PROJECT_PATH=./projects